<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".PropertyValueAnimationActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_property_value_anim"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="value"
                android:gravity="center"
                android:layout_alignParentTop="true"/>


            <Button
                android:id="@+id/btn_property_alpha_anim"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="透明"
                android:gravity="center"
                android:layout_alignParentTop="true"/>

            <Button
                android:id="@+id/btn_property_roate_anim"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="旋转"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

            <Button
                android:id="@+id/btn_property_translate_anim"
                android:layout_width="0dp"
                android:layout_weight="1"                android:layout_height="wrap_content"
                android:text="位移"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

            <Button
                android:id="@+id/btn_property_scale_anim"
                android:layout_width="0dp"
                android:layout_weight="1"                android:layout_height="wrap_content"
                android:text="缩放"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>
            <Button
                android:id="@+id/btn_property_set_anim"
                android:layout_width="0dp"
                android:layout_weight="1"                android:layout_height="wrap_content"
                android:text="组合"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn"
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            android:text="测试"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_property_tween_anim"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            android:src="@drawable/m4"/>
    </LinearLayout>